@import '../../../../node_modules/tags-input/tags-input.css'
@import '../../../../lib/admin/admin-topics-form/tag-autocomplete/styles'


.form-propuesta
  display: flex
  flex-direction: column
  align-items: center
  @media (max-width: 400px)
    margin-top: 140px
  .propuesta-header
    color: white
    // text-shadow: 0 1px 3px #333
    display: flex
    align-items: center
    flex-direction: column
    justify-content: flex-end
    min-height: 250px
    width: 100%
    padding: 0 20px
    text-align: center
    background-image: unquote("url('ext/lib/site/formulario-propuesta/fondo-formulario-propuestas.svg')")
    background-repeat: no-repeat
    background-position: center;
    background-color: $primary-color-2
    background-size: 100%
    h1
      font-size: 32px
      margin:0;
      background-color: $primary-color-2;
      padding: 10px 20px;
      @media screen and (min-width: 764px)
        font-size: 32px
    p
      font-size: 16px
      margin:0;
      padding: 4px 30px;
      // margin-top:6px;
      // background-color: rgba(23,145,190,0.6)
      background-color: #0080A5
      @media screen and (min-width: 764px)
        font-size: 20px

  .wrapper
    max-width:80%
    width: 100%
    padding: 20px
    position: relative
    .more-info
      text-align: center;
      font-size: 20px;
      margin-top: 10px;
    .bar-section
      padding: 1rem 1rem;
      text-align: center
      &.acerca-requisitos
        margin-top: 0
        background-color: $primary-color-2
        .section-title
          font-size: 20px
          color: white
          text-align: center;        
      &.acerca-propuesta
        background: $pink;
        margin: 2rem 20%    
        margin-bottom: 0
      p
        margin: 0
        color: #000
        text-align: center;
        line-height: normal;
      .section-title
        font-size: 30px
        font-weight: bold
        color: white
        text-align: center;
      .section-subtitle
        color: #484747
        font-size: 16px
        text-align: centerfont-family
      font-size: 20px;
      font-weight: bold;

    input
      width:100%
    .tags-input
      border-radius: 5px
      border: 1px solid #CACACA
      padding: 3px 10px
      width: 100%
    
    .btn-requirements-accepted
      color: $primary-color
      font-style: normal;
      font-size: 25px;
      font-weight: 400
      line-height: 30px;
      text-align: center;
      padding: 1rem;
      border: 3px solid $primary-color;
      filter: drop-shadow(0px 4px 4px rgba(255, 255, 255, 0.25));
      border-radius: 5px;
      background: #FFFFFF;      

    .bullet-requisitos
      margin-top: 40px
    li
      font-style: normal;
      font-weight: 400;
      color: #000000;
      text-align: justify
      margin-bottom: .5rem
    .bold
      font-weight: bold;

    
    .submit-div
      text-align: center
      .submit-btn
        color: $primary-color
        font-weight: 800
        border: 2px solid $primary-color
        background-color: #FFF;
        border-radius: 5px
        padding: 12px 60px
        font-weight: 800;
        font-size: 25px
        cursor: pointer
        &:hover
          background-color: $primary-color;
          color: #FFF
      .submit-btn-disabled
        color: #fff
        font-weight: 800
        border: none
        background-color: $grey;
        border-radius: 5px
        padding: 12px 60px
        font-weight: 800;
        font-size: 25px
        cursor: not-allowed
    .form-section-label
      color: #9e41b9
      font-size: 18px
      font-weight: bold
      @media screen and (min-width: 1360px)
        position: relative
        left: -240px
        margin-top: 10px
        top: 30px
  ul.tags
    list-style: none;
    margin: 20px 0;
    overflow: hidden;
    padding: 0;
  ul.tags li
    float: left;

  .tag
    background: #eee;
    border-radius: 8px;
    color: #000;
    display: inline-block;
    padding: 4px;
    //height: 25px;
    line-height: 25px;
    position: relative;
    margin: 0 10px 10px 0;
    text-decoration: none;
    /* &::before
      background: #fff;
      border-radius: 10px;
      box-shadow: inset 0 1px rgba(0, 0, 0, 0.25);
      content: '';
      height: 6px;
      left: 10px;
      position: absolute;
      width: 6px;
      top: 10px;
    &::after
      background: #fff;
      border-bottom: 13px solid transparent;
      border-left: 10px solid #eee;
      border-top: 13px solid transparent;
      content: '';
      position: absolute;
      right: 0;
      top: 0; */
    &:hover
      background: $primary-color-2;
      color: white !important;
      cursor: pointer;
      padding: 4px;
    /* &:hover::after
      border-left-color: #8c1e80; */
    &.active
      padding: 4px;
      color: white
      &:after
        content: 'x'
        padding-left: 12px
   /*  &.active::after
      border-left-color: #8c1e80; */

  .add-color
    color: $primary-color;
  .help-text
    display: block
    font-size: 16px
    color: #000
    margin: 0 0 .3em
    &.requerido
      font-size: .7em
      font-style: italic
      color: #828282

  .span-alert
    color: #9e41b9
    font-size:.8em
    @media screen and (min-width: 1360px)
        position: relative
        // left: -240px
        margin-top: 10px
        top: 30px
  .cronograma-alert
    padding-top:10px

  .cronograma
    tex-align:right
    margin-top: 40px

  .error-box
    border: 2px solid red;
    border-radius: 10px
    padding: 15px;
    margin-bottom: 10px
    ul
      margin-bottom: 0
    li.error-li
      color: red;

  .idea-no-factible
    margin-top: 20px
    margin-bottom: 20px  
    align-items: center;
    padding: 20px 20px;
    background: #FFE8E3;
    border: 5px solid #FB5734;
    border-radius: 25px;    
    img
      margin-top: -2.8rem
    p
      top: 50%;
      left: 50%;
      font-style: normal;
      font-weight: 300;
      font-size: 18px;
      line-height: 30px;
      text-align: center;
      color: #000000;

  .idea-factible
    margin-top: 20px
    margin-bottom: 20px  
    align-items: center;
    padding: 20px 20px;
    background: #FFE8E3;
    border: 5px solid $primary-color;
    border-radius: 25px;    
    img
      margin-top: -2.8rem
    p
      top: 50%;
      left: 50%;
      font-style: normal;
      font-weight: 300;
      font-size: 18px;
      line-height: 30px;
      text-align: center;
      color: #000000;    

  .aceptar-tyc
    font-style: normal;
    font-weight: 400;
    font-size: 1.85rem;
    line-height: 30px;
    text-align: center;
    color: $primary-color;

  .parte-ubicacion
    font-style: normal;
    font-weight: 400;
    font-size: 30px;
  
  .buscar-facultad
    text-decoration-line: underline;
    color: #00758F;
    cursor: pointer;

  .disclaimer-orgas
    padding: 20px;
    box-sizing: border-box;
    width: 100%;
    border: 3px solid $primary-color-2;  
  
  .facultad-selected
    border: 3px solid $primary-color-2!important; 