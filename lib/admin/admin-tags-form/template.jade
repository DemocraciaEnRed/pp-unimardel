#tag-wrapper
  .tag-admin
    .heading
      .circle
        i.icon-user
      h1= t(form.title)
    form.form(action=form.action, method="post", role="form", autocomplete="off", autovalidate='autovalidate', autosubmit='autosubmit')
      ul.form-messages
      .form-group
        label= t('admin-tags-form.label.name')
        input.form-control(type='text', maxlength='50', id="name", name='name', placeholder=t('admin-tags-form.placeholder.name'), value=tag.name, validate='required')
      .form-group
        label= t('admin-tags-form.label.image')
        .tag-images
          - each image in images
            - const id = 'fa fa-' + image
            .tag-image()
              input(type='radio', name='image', value=image, checked= tag.image === image, validate='any:image', id=id)
              label(for=id)
                i(class=id, aria-hidden="true")
      .form-group
        button.btn.btn-success.btn-block.btn-lg
          = t('admin-tags-form.button.submit')
