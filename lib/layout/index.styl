/* `component/confirmation` adjust styles
-------------------------------------------------- */
body
  .overlay
    background unquote("radial-gradient(ellipse at center, rgba(0,0,0,0.25) 0%, rgba(0,0,0,0.55) 100%)")
    z-index 9999998
    position: fixed

  .dialog
    position fixed
    display block
    left 50%
    top 150px
    right initial
    bottom initial
    max-width 100%
    width 400px
    margin-left -200px
    background #FFF
    box-shadow 2px 2px 5px rgba(0,0,0,.4)
    border 0px
    overflow initial
    z-index 9999999

    @media (max-width: 399px)
      left 1%
      width 98%
      margin-left 0

    p
      font-size 1.1em
    .content
      padding 0px 20px 10px 20px
      width 100% // overrides .dialog width from dialog component
      max-width none
      min-width 0

      .title
        position absolute
        left 0px
        right 0px
        top 0px
        min-height 20px
        padding 5px 20px
        background #D95E59
        color #FFF
        text-transform uppercase
        font-weight 600
      .body
        padding 20px 0px
        margin-top 30px
      .close
        line-height 10px
        top 10px
        right 10px
        font-weight 600
        color #000
        opacity .5
    .confirmation-actions
      padding 5px 10px
      button
        border none
        color #FFF
        background #aaa
        padding 5px 10px
        letter-spacing 0.09em
        text-transform uppercase
        font-size 0.7em
        outline none
        margin-left 5px
        &.cancel
          outline none
          &:focus, &:hover
            background #777
        &.main, &.ok
          background #D95E59
          &:focus, &:hover
            background #952722

span.error
  pointer-events none

.ellipsis
  overflow hidden
  text-overflow ellipsis
  white-space nowrap

a
  color: $primary-color
  font-weight: 400


