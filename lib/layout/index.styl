  text-transform none

.alert
  color white
  border 1px solid
  border-radius border_radius
  font-size .9em

  &.with-icon
    position relative
    padding-left 3em

    .alert-icon
      position absolute
      margin-right .5em
      top 1.2em
      left 1.3em

  &.alert-info
    color darken(#3498db, 50%)
    border-color #3498db
    background-color lighten(#3498db, 70%)

  &.alert-success
    color darken(#27ae60, 50%)
    border-color #27ae60
    background-color lighten(#27ae60, 70%)

  &.alert-warning
    color darken(#f1c40f, 50%)
    border-color #f1c40f
    background-color lighten(#f1c40f, 70%)

  &.alert-danger
    color darken(#d9534f, 50%)
    border-color #d9534f
    background-color lighten(#d9534f, 70%)

.system-alert
  margin-top 20px

.caret
  color #000
  position absolute
  right 12px
  top 50%
  margin-top -1px

.small-container
  max-width 300px
  padding-left 10px
  padding-right 10px
  margin auto

.title-page
  text-align center
  margin-bottom 30px
  margin-top 30px
  .circle
    color white
    width 40px
    height 40px
    overflow hidden
    display inline-block
    border-radius 100px

  i
    font-size 20px
    line-height 38px
    color #7f8c8d

  h1
    font-size 1.25rem
    letter-spacing 1px
    text-transform uppercase

.nav-pills > li > a
  border-radius 2px

/* Site Content Container
-------------------------------------------------- */
.site-content
  margin-top header_height
  background-color #fff

/* Signin page
-------------------------------------------------- */
.signin-container, .signup-container, .forgot-container
  form
    label
      display:inline-block
    .forgot
      float:right
      a
